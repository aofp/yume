{
  "name": "yurucode",
  "version": "0.1.0",
  "description": "Minimal Claude Code UI",
  "type": "module",
  "author": "yuruko",
  "scripts": {
    "dev": "vite",
    "dev:allocate": "node scripts/allocate-port.mjs",
    "dev:dynamic": "npm run dev:allocate && npm run tauri:dev",
    "server:macos": "node --expose-gc --max-old-space-size=2048 server-claude-macos.js",
    "server:wsl": "node server-claude-direct.cjs",
    "build": "node scripts/inject-version.cjs && vite build && node scripts/patch-vendor.cjs",
    "preview": "vite preview",
    "prestart": "node scripts/kill-ports.js",
    "tauri": "tauri",
    "tauri:dev": "tauri dev --config src-tauri/tauri.dev.conf.json",
    "tauri:dev:mac": "concurrently -k \"npm run dev\" \"tauri dev --no-dev-server --config src-tauri/tauri.dev.conf.json\"",
    "tauri:dev:win": "concurrently -k \"npm run dev\" \"tauri dev --no-dev-server --config src-tauri/tauri.dev.conf.json\"",
    "tauri:dev:manual": "tauri dev --no-dev-server --config src-tauri/tauri.dev.conf.json",
    "tauri:build": "npm run bundle:macos && tauri build",
    "bundle:macos": "node scripts/bundle-macos-server.js",
    "tauri:build:mac": "npm run bundle:macos && tauri build --target aarch64-apple-darwin",
    "open:dmg": "node scripts/open-dmg.js",
    "tauri:build:mac:universal": "tauri build --target universal-apple-darwin",
    "tauri:build:win": "npm run build && tauri build --target x86_64-pc-windows-msvc",
    "tauri:build:linux": "tauri build --target x86_64-unknown-linux-gnu",
    "test:session-loading": "node test-session-loading.js"
  },
  "keywords": [
    "claude",
    "ai",
    "sdk",
    "tauri",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "@tauri-apps/cli": "^2.7.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.8",
    "eslint": "^8.56.0",
    "javascript-obfuscator": "^4.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "purgecss": "^7.0.2",
    "rollup-plugin-obfuscator": "^1.1.0",
    "sharp": "^0.34.3",
    "terser": "^5.43.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.1"
  },
  "dependencies": {
    "@tabler/icons-react": "^3.34.1",
    "@tanstack/react-virtual": "^3.13.12",
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-dialog": "^2.3.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "portfinder": "^1.0.37",
    "proxy-addr": "^2.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^5.8.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "vary": "^1.1.2",
    "zustand": "^4.4.7"
  },
  "optionalDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.46.2",
    "@tauri-apps/cli-win32-x64-msvc": "^2.7.1"
  }
}
